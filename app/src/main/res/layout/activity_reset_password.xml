    <FrameLayout
        android:id="@+id/flConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:outlineAmbientShadowColor="@android:color/darker_gray"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flResetPassword"
        tools:targetApi="p">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/alata"
            android:hint="Confirmare parola noua"
            android:inputType="textPassword"
            android:textColorHint="@color/design_default_color_primary_dark"
            android:textSize="25dp"
            android:textStyle="bold"></com.google.android.material.textfield.TextInputEditText>
    </FrameLayout>

