<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_100"
    tools:context=".account.PhoneNumberValidation">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/validate_phone_number"
            android:textStyle="bold"
            android:fontFamily="@font/alata"
            android:textColor="@color/violet"
            android:textAlignment="center"
            android:textSize="40dp"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="4dp"
                android:splitMotionEvents="false"
                app:boxBackgroundColor="@color/white"
                android:textColorHint="@color/violet"
                app:boxStrokeColor="@color/violet"
                app:counterTextColor="@color/violet"
                android:outlineSpotShadowColor="@color/violet"
                app:hintTextColor="@color/violet"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                android:outlineAmbientShadowColor="@android:color/darker_gray"
                tools:targetApi="p">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etValidationCode1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/alata"
                    android:inputType="number"
                    android:textColor="@color/violet"
                    android:textAlignment="center"
                    android:textColorHint="@color/violet"
                    android:textSize="25dp"
                    android:textStyle="bold"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="4dp"
                android:splitMotionEvents="false"
                app:boxBackgroundColor="@color/white"
                android:textColorHint="@color/violet"
                app:boxStrokeColor="@color/violet"
                app:counterTextColor="@color/violet"
                android:outlineSpotShadowColor="@color/violet"
                app:hintTextColor="@color/violet"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                android:outlineAmbientShadowColor="@android:color/darker_gray"
                tools:targetApi="p">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etValidationCode2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/alata"
                    android:inputType="number"
                    android:textColor="@color/violet"
                    android:textAlignment="center"
                    android:textColorHint="@color/violet"
                    android:textSize="25dp"
                    android:textStyle="bold"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="4dp"
                android:splitMotionEvents="false"
                app:boxBackgroundColor="@color/white"
                android:textColorHint="@color/violet"
                app:boxStrokeColor="@color/violet"
                app:counterTextColor="@color/violet"
                android:outlineSpotShadowColor="@color/violet"
                app:hintTextColor="@color/violet"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                android:outlineAmbientShadowColor="@android:color/darker_gray"
                tools:targetApi="p">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etValidationCode3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/alata"
                    android:inputType="number"
                    android:textColor="@color/violet"
                    android:textAlignment="center"
                    android:textColorHint="@color/violet"
                    android:textSize="25dp"
                    android:textStyle="bold"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="4dp"
                android:splitMotionEvents="false"
                app:boxBackgroundColor="@color/white"
                android:textColorHint="@color/violet"
                app:boxStrokeColor="@color/violet"
                app:counterTextColor="@color/violet"
                android:outlineSpotShadowColor="@color/violet"
                app:hintTextColor="@color/violet"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                android:outlineAmbientShadowColor="@android:color/darker_gray"
                tools:targetApi="p">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etValidationCode4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/alata"
                    android:textColor="@color/violet"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColorHint="@color/violet"
                    android:textSize="25dp"
                    android:textStyle="bold"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="4dp"
                android:splitMotionEvents="false"
                app:boxBackgroundColor="@color/white"
                android:textColorHint="@color/violet"
                app:boxStrokeColor="@color/violet"
                app:counterTextColor="@color/violet"
                android:outlineSpotShadowColor="@color/violet"
                app:hintTextColor="@color/violet"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                android:outlineAmbientShadowColor="@android:color/darker_gray"
                tools:targetApi="p">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etValidationCode5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/alata"
                    android:inputType="number"
                    android:textColor="@color/violet"
                    android:textAlignment="center"
                    android:textColorHint="@color/violet"
                    android:textSize="25dp"
                    android:textStyle="bold"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="4dp"
                android:splitMotionEvents="false"
                app:boxBackgroundColor="@color/white"
                android:textColorHint="@color/violet"
                app:boxStrokeColor="@color/violet"
                app:counterTextColor="@color/violet"
                android:outlineSpotShadowColor="@color/violet"
                app:hintTextColor="@color/violet"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                android:outlineAmbientShadowColor="@android:color/darker_gray"
                tools:targetApi="p">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etValidationCode6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/alata"
                    android:inputType="number"
                    android:textColor="@color/violet"
                    android:textAlignment="center"
                    android:textColorHint="@color/violet"
                    android:textSize="25dp"
                    android:textStyle="bold"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/receive_text_message_for_phone_validation"
            android:textAlignment="center"
            android:textColor="@color/violet"
            android:textStyle="italic"
            android:textSize="20dp"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/btnValidate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/alata"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/validate"
            android:textAlignment="center"></Button>

        <ProgressBar
            android:id="@+id/progressBarPhoneValidation"
            android:visibility="invisible"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>