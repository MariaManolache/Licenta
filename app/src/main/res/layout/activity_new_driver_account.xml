<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_100"
    android:orientation="vertical"
    tools:context=".account.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:gravity="center"
            android:text="@string/add_new_driver_account"
            android:textAlignment="center"
            android:textColor="@color/violet"
            android:textSize="40dp"></TextView>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            android:outlineSpotShadowColor="@color/violet"
            android:splitMotionEvents="false"
            android:textColorHint="@color/violet"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxStrokeColor="@color/violet"
            app:counterTextColor="@color/violet"
            app:hintTextColor="@color/violet"
            tools:targetApi="p">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDriverName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/alata"
                android:hint="@string/name"
                android:inputType="textCapWords"
                android:textColor="@color/violet"
                android:textColorHint="@color/violet"
                android:textSize="20dp"
                android:textStyle="bold"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            android:outlineSpotShadowColor="@color/violet"
            android:splitMotionEvents="false"
            android:textColorHint="@color/violet"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxStrokeColor="@color/violet"
            app:counterTextColor="@color/violet"
            app:hintTextColor="@color/violet"
            tools:targetApi="p">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDriverEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/alata"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="@color/violet"
                android:textColorHint="@color/violet"
                android:textSize="20dp"
                android:textStyle="bold"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            android:outlineSpotShadowColor="@color/violet"
            android:splitMotionEvents="false"
            android:textColorHint="@color/violet"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxStrokeColor="@color/violet"
            app:counterTextColor="@color/violet"
            app:hintTextColor="@color/violet"
            app:prefixText="+40"
            app:prefixTextColor="@color/violet"
            app:prefixTextAppearance="@style/prefixText"
            tools:targetApi="p">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDriverPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/alata"
                android:hint="@string/phone"
                android:inputType="phone"
                android:textColor="@color/violet"
                android:textColorHint="@color/violet"
                android:textSize="20dp"
                android:textStyle="bold"></com.google.android.material.textfield.TextInputEditText>


        </com.google.android.material.textfield.TextInputLayout>

        <!--    <EditText-->
        <!--        android:id="@+id/etEmail"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_marginTop="25dp"-->
        <!--        android:textSize="25dp"-->
        <!--        android:inputType="textEmailAddress"-->
        <!--        android:maxLength="30"-->
        <!--        android:hint="Email"></EditText>-->


        <Button
            android:id="@+id/btnAddNewDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/alata"
            android:gravity="center"
            android:text="@string/add"
            android:textAlignment="center"
            android:textStyle="bold"></Button>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

    </LinearLayout>

</RelativeLayout>