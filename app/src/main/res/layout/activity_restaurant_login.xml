<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_100"
    tools:context=".account.SignIn">


    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/authenticate"
            android:textStyle="bold"
            android:textColor="@color/violet"
            android:textAlignment="center"
            android:textSize="50dp"></TextView>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            android:background="@drawable/border"
            tools:targetApi="p">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/alata"
                android:hint="@string/email"
                android:textColor="@color/violet"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/violet"
                android:textSize="25dp"
                android:textStyle="bold"></com.google.android.material.textfield.TextInputEditText>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:outlineAmbientShadowColor="@android:color/darker_gray"
            android:background="@drawable/border"
            tools:targetApi="p">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/alata"
                android:hint="@string/password"
                android:textColor="@color/violet"
                android:inputType="textPassword"
                android:textColorHint="@color/violet"
                android:textSize="25dp"
                android:textStyle="bold"></com.google.android.material.textfield.TextInputEditText>
        </FrameLayout>


        <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="@string/validate"></Button>

        <ProgressBar
            android:id="@+id/progressBarSignIn"
            android:visibility="invisible"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/question_mark"></ImageView>
            <TextView
                android:textSize="25sp"
                android:fontFamily="@font/alata"
                android:textColor="@color/violet"
                android:textAlignment="center"
                android:textStyle="italic"
                android:text="@string/enter_given_credentials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>